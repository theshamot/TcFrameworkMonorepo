    <Method Name="BuildValueString" Id="{f214b55b-5050-0596-38a7-7e0d32dc8021}">
      <Declaration><![CDATA[METHOD PRIVATE BuildValueString : BOOL
VAR
	i : INT;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[sb.Clear();
FOR i := 0 TO valueCount - 1 DO
	IF (i > 0) THEN
		sb.Append(_NewLine);
	END_IF
	sb.AppendByPointer(values[i].BuildAndGetAssignmentString());
END_FOR]]></ST>
      </Implementation>

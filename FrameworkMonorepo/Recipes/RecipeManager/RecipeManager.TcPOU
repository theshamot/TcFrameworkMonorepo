    <Method Name="Cyclic" Id="{788b2b89-a987-0ac7-0a9d-51b6f200985e}">
      <Declaration><![CDATA[METHOD Cyclic
]]></Declaration>
      <Implementation>
        <ST><![CDATA[file.Cyclic();
directory.Cyclic();

_JustSaved := FALSE;
_JustLoaded := FALSE;

IF (savingFile AND file.Done) THEN
	savingFile := FALSE;
	_JustSaved := TRUE;
	sb.Clear();
	ListRecipes();
END_IF

IF (loadingFile AND file.Done) THEN
	loadingFile := FALSE;
	_JustLoaded := TRUE;
	ParseValueString();
	sb.Clear();
END_IF

IF (NOT recipesLoaded) THEN
	ListRecipes();
	recipesLoaded := TRUE;
END_IF]]></ST>
      </Implementation>
    </Method>

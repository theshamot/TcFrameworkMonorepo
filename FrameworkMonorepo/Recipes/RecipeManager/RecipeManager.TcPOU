    <Method Name="GetNextLineOrPartialString" Id="{eefc1513-9dc1-006f-1ceb-593db6ad3425}">
      <Declaration><![CDATA[METHOD PRIVATE GetNextLineOrPartialString : T_MaxString
VAR_INPUT
	startCaret : DINT;
	isContinuationOfPreviousLine : BOOL;
END_VAR
VAR_OUTPUT
	caret : DINT;
	stringWillContinueOnNextLine : BOOL;
END_VAR
VAR
	length : DINT;
	lineEndLength : DINT;
	continuationOffset : DINT;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[length := TO_DINT(FIND2(
			pSrcString := ADR(buffer[startCaret]),
			pFindString := ADR(_NewLine)
			));
IF (isContinuationOfPreviousLine) THEN
	continuationOffset := TO_DINT(continuingStringMarkerLength);
END_IF
length := length - continuationOffset;

IF (length = 0) THEN
	length := sb.Length - startCaret;
	lineEndLength := 0;
ELSE
	lineEndLength := LEN(_NewLine);
END_IF

ClearData(GetNextLineOrPartialString);

IF (isContinuationOfPreviousLine) THEN
	GetNextLineOrPartialString := continuingStringMarker;
END_IF

IF (length <= SIZEOF(GetNextLineOrPartialString) - 1) THEN
	MEMCPY(
		srcAddr := ADR(buffer[startCaret]),
		destAddr := ADR(GetNextLineOrPartialString),
		n := TO_UDINT(length - lineEndLength - continuationOffset)
	);
	caret := startCaret + length;
ELSE
	MEMCPY(
		srcAddr := ADR(buffer[startCaret]),
		destAddr := ADR(GetNextLineOrPartialString),
		n := SIZEOF(GetNextLineOrPartialString) - 1 - TO_UDINT(continuationOffset)
	);
	caret := startCaret + SIZEOF(GetNextLineOrPartialString) - 1 - continuationOffset;
	stringWillContinueOnNextLine := TRUE;
END_IF]]></ST>
      </Implementation>
    </Method>

    <Method Name="Save" Id="{f0759a7e-99b2-0933-354d-07d2436af8d4}">
      <Declaration><![CDATA[METHOD Save
]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF (_FileName = '' OR _FolderPath = '') THEN
	RETURN;
END_IF

BuildValueString();

file.Write(
	buffer := ADR(buffer),
	bufferLength := LEN2(ADR(buffer)),
	filePath := GetRecipePath(),
	append := FALSE
);

savingFile := TRUE;]]></ST>
      </Implementation>

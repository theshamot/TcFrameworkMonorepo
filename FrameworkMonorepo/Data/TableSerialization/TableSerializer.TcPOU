    <Method Name="Serialize" Id="{3fe63765-60b0-0c99-3c86-f4191a72f13d}">
      <Declaration><![CDATA[METHOD Serialize
]]></Declaration>
      <Implementation>
        <ST><![CDATA[stringBuilder.Clear();
AddColumnHeader();
AddRows();]]></ST>
      </Implementation>
    </Method>

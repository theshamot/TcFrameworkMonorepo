<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.12">
  <POU Name="TableSerializer" Id="{d72633b8-404b-0f0c-3a80-0e4530f50430}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK TableSerializer
VAR
	stringBuilder : REFERENCE TO StringBuilderExtBuffer;
	
	rowDefinition : __SYSTEM.AnyType;
	_RowCount : DINT;
	columnDefinitions : POINTER TO __SYSTEM.AnyType;
	columnNames : POINTER TO T_MaxString;
	columnDefinitionCount : INT;
	definedColumns : INT;
	
	_Separator : STRING := ',';
	_NewLine : STRING := '$N'; // Default is Windows newline.
	_DecimalSeparator : STRING := '.';
END_VAR
VAR CONSTANT
	DefaultDecimalSeparator : STRING := '.';
END_VAR]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
    <Method Name="AddColumnHeader" Id="{a96e7383-fed6-092f-1ef5-a1a0885e5cef}">
      <Declaration><![CDATA[METHOD PRIVATE AddColumnHeader
VAR
	column : INT;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF (columnNames = 0) THEN
	RETURN;
END_IF

FOR column := 0 TO definedColumns - 1 DO
	IF (column > 0) THEN
		stringBuilder.Append(_Separator);
	END_IF
	
	stringBuilder.Append(columnNames[column]);
END_FOR

AddNewLine();]]></ST>
      </Implementation>
    </Method>
    <Method Name="AddLine" Id="{d9b58cd7-c635-083b-245e-5fb2dcc20db1}">
      <Declaration><![CDATA[METHOD PRIVATE AddLine
VAR_INPUT
	rowIndex : DINT;
END_VAR
VAR
	column : INT;
	currentData : __SYSTEM.AnyType;
	converted : T_MaxString;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[FOR column := 0 TO definedColumns - 1 DO
	IF (column > 0) THEN
		stringBuilder.Append(_Separator);
	END_IF
	
	currentData := columnDefinitions[column];
	currentData.pValue := rowDefinition.pValue + (rowDefinition.diSize * rowIndex) + (currentData.pValue - rowDefinition.pValue);
	
	IF (currentData.TypeClass = IBaseLibrary.TypeClass.TYPE_STRING) THEN
		stringBuilder.AppendByPointer(currentData.pValue);
	ELSE
		converted := AnyTypeToString(currentData);
		
		CASE currentData.TypeClass OF
			TYPE_REAL, TYPE_LREAL:
				ReplaceString(converted, DefaultDecimalSeparator, _DecimalSeparator);
		END_CASE
		
		stringBuilder.Append(converted);
	END_IF
END_FOR

AddNewLine();
]]></ST>
      </Implementation>
    </Method>
    <Method Name="AddNewLine" Id="{8ec85cae-9933-0793-348f-1132550fb9cc}">
      <Declaration><![CDATA[METHOD PRIVATE AddNewLine
]]></Declaration>
      <Implementation>
        <ST><![CDATA[stringBuilder.Append(_NewLine);
]]></ST>
      </Implementation>
    </Method>
    <Method Name="AddRows" Id="{38ae6eb7-6156-043d-0e52-11eeb0fae8ae}">
      <Declaration><![CDATA[METHOD PRIVATE AddRows
VAR
	row : DINT;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[FOR row := 0 TO _RowCount - 1 DO
	AddLine(row);
END_FOR]]></ST>
      </Implementation>
    </Method>
